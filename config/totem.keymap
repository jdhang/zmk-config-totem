#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define BASE 0
#define NAV  1
#define SYM  2
#define NUM  3

&lt {
  flavor = "balanced";
  tapping-term-ms = <200>;
  quick-tap-ms = <175>;
};

&mt {
  quick-tap-ms = <100>;
  global-quick-tap;
  flavor = "tap-preferred";
  tapping-term-ms = <170>;
};

/ {
  behaviors {
    // sticky quick release
    skq: sticky_key_quick_release {
      compatible = "zmk,behavior-sticky-key";
      label = "STICKY_KEY_QUICK_RELEASE";
      #binding-cells = <1>;
      bindings = <&kp>;
      release-after-ms = <1000>;
      quick-release;
      ignore-modifiers;
    };

    // tap: left-parenthesis | shift + tap: less-than
    lpar_lt: lpar_lessthan {
      compatible = "zmk,behavior-mod-morph";
      label = "LPAR_GREATER_THAN";
      #binding-cells = <0>;
      bindings = <&kp LPAR>, <&kp LT>;
      mods = <(MOD_LSFT|MOD_RSFT)>;
    };

    // tap: right-parenthesis | shift + tap: greater-than
    rpar_gt: rpar_greaterthan {
      compatible = "zmk,behavior-mod-morph";
      label = "RPAR_LESS_THAN";
      #binding-cells = <0>;
      bindings = <&kp RPAR>, <&kp GT>;
      mods = <(MOD_LSFT|MOD_RSFT)>;
    };

    // tap: backslash | shift + tap: forwardslash
    bslh_fslh: backslash_forwardslash {
      compatible = "zmk,behavior-mod-morph";
      label = "BACKSLASH_FORWARDSLASH";
      #binding-cells = <0>;
      bindings = <&kp BSLH>, <&kp FSLH>;
      mods = <(MOD_LSFT|MOD_RSFT)>;
    };
 
    // tap: dot | shift + tap: comma 
    dot_comma: dot_comma {
      compatible = "zmk,behavior-mod-morph";
      label = "DOT_COMMA";
      #binding-cells = <0>;
      bindings = <&kp DOT>, <&kp COMMA>;
      mods = <(MOD_LSFT|MOD_RSFT)>;
    };
  };

  macros {
    arrow_fn: arrow_fn {
      compatible = "zmk,behavior-macro";
      label = "ARROW_FUNCTION";
      #binding-cells = <0>;
      bindings
        = <&macro_tap &kp EQUAL>
        , <&macro_tap &kp GT>
        ;
    };
  };

        keymap {
                compatible = "zmk,keymap";
